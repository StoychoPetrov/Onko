<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android               ="http://schemas.android.com/apk/res/android"
    android:layout_width        ="match_parent"
    android:layout_height       ="wrap_content"
    android:paddingTop          ="10dp"
    android:paddingBottom       ="10dp"
    xmlns:app                   ="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id                              ="@+id/dayTxt"
        android:layout_width                    ="120dp"
        android:layout_height                   ="wrap_content"
        android:text                            ="@string/monday"
        app:layout_constraintStart_toStartOf    ="parent"
        app:layout_constraintTop_toTopOf        ="parent"/>

    <TextView
        android:id                              ="@+id/startHourTxt"
        android:layout_width                    ="wrap_content"
        android:layout_height                   ="wrap_content"
        app:layout_constraintEnd_toStartOf      ="@id/mondayToTxt"
        app:layout_constraintTop_toTopOf        ="@id/dayTxt"/>

    <TextView
        android:id                              ="@+id/mondayToTxt"
        android:layout_width                    ="wrap_content"
        android:layout_height                   ="wrap_content"
        android:paddingStart                    ="10dp"
        android:paddingEnd                      ="10dp"
        android:text                            ="@string/to_"
        app:layout_constraintEnd_toStartOf      ="@id/endHourTxt"
        app:layout_constraintTop_toTopOf        ="@id/dayTxt"/>

    <TextView
        android:id                              ="@+id/endHourTxt"
        android:layout_width                    ="wrap_content"
        android:layout_height                   ="wrap_content"
        app:layout_constraintEnd_toEndOf        ="parent"
        app:layout_constraintTop_toTopOf        ="@id/dayTxt"/>

</androidx.constraintlayout.widget.ConstraintLayout>